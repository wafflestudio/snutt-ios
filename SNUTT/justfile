    @echo "ğŸš€ Setting up production environment..."
    @just openapi-prod
    @pre-commit install
    @echo "ğŸ“¦ Running tuist generate..."
    @tuist generate
    @echo "âœ… Production environment setup completed!"

clean-derived-data:
    @echo "ğŸ—‘ï¸ Cleaning DerivedData..."
    @rm -rf ~/Library/Developer/Xcode/DerivedData/SNUTT-*
    @echo "âœ… DerivedData cleaned successfully!"

clean-build:
    @echo "ğŸ§¹ Initiating clean build..."
    @just clean-derived-data
    @echo "ğŸ§½ Running tuist clean..."
    @tuist clean
    @echo "ğŸ“¦ Installing dependencies..."
    @tuist install
    @echo "ğŸ”¨ Building project..."
    @tuist generate --no-open
    @tuist build
    @echo "âœ… Clean build completed successfully!"

clean-generate:
    @echo "ğŸ§¹ Initiating clean generate..."
    @just clean-derived-data
    @echo "ğŸ§½ Running tuist clean..."
    @tuist clean
    @echo "ğŸ“¦ Installing dependencies..."
    @tuist install
    @echo "ğŸ—ï¸  Generating project..."
    @tuist generate
    @echo "âœ… Clean generate completed successfully!"

format:
    @echo "ğŸ¨ Formatting Swift code..."
    swift-format format --recursive --in-place .
    @echo "âœ… Swift code formatting completed!"

check:
    @echo "ğŸ“¦ Installing dependencies..."
    @tuist install
    @echo "ğŸ” Inspecting implicit imports..."
    @tuist inspect implicit-imports
    @echo "ğŸ¨ Checking code formatting..."
    @just format
    @echo "âœ… All checks completed!"